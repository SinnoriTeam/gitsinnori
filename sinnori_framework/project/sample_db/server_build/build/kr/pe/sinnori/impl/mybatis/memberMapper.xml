<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper

PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="orm.mybatis.memberMapper">

    <insert id="add" parameterType="hashmap">

        insert into members values(#{id}, #{pwd}, #{email}, #{phone}, sysdate())

    </insert>

    <delete id="remove" parameterType="java.lang.String">

        delete from members where id=#{id}

    </delete>

    <update id="modify" parameterType="hashmap">

        update members set pwd=#{pwd}, email=#{email}, phone=#{phone} where id=#{id}

    </update>
   
    
    <select id="getHashList" resultType="hashmap">

        select * from members

    </select>

    <select id="getHashInfo" parameterType="String" resultType="hashmap">

        select * from members

         where id=#{id}    

    </select>

</mapper>
