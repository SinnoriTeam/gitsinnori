<?xml version="1.0" encoding="UTF-8"?>
<!--
	item type : (unsigned) byte, (unsigned) short, (unsigned) integer, long,
					fixed length string, 
					ub pascal string, us pascal string, si pascal string, 
					fixed length byte[], variable length byte[] 
	array counter type : reference 변수참조, direct 직접입력
	direction : FROM_NONE_TO_NONE, FROM_SERVER_TO_CLINET, FROM_CLIENT_TO_SERVER, FROM_ALL_TO_ALL
	(1) FROM_NONE_TO_NONE : 메시지는 서버에서 클라이언트로 혹은 클라이언트에서 서버로 양쪽 모두에서 전송되지 않는다.
	(2) FROM_SERVER_TO_CLINET : 메시지는 서버에서 클라이언트로만 전송된다.
	(3) FROM_CLIENT_TO_SERVER : 메시지는 클라이언트에서 서버로만 전송된다.
	(4) FROM_ALL_TO_ALL : 메시지는 서버에서 클라이언트로도 혹은 클라이언트에서 서버로 양쪽 모두에서 전송된다.
-->
<sinnori_message>
<messageID>ReadyToUploadReq</messageID>
<direction>FROM_CLIENT_TO_SERVER</direction>
<desc>파일 업로드 준비 요청 입력 메시지</desc>
<singleitem name="whetherToAppend" type="byte">
	<desc>이어받기 여부, 만약 참이면 목적지 파일뒤로 이어받기를 하며, 거짓이면 목적지 파일을 처음부터 덮어쓴다. 0x00 : 거짓, 0x01 : 참</desc>
</singleitem>
<singleitem name="clientSourceFileID" type="integer">
	<desc>클라이언트 원본 파일 식별자</desc>
</singleitem>
<singleitem name="localFilePathName" type="ub pascal string">
	<desc>로컬 파일 경로</desc>
</singleitem>
<singleitem name="localFileName" type="ub pascal string">
	<desc>로컬 파일 이름</desc>
</singleitem>
<singleitem name="localFileSize" type="long">
	<desc>로컬 파일 크기</desc>
</singleitem>
<singleitem name="remoteFilePathName" type="ub pascal string">
	<desc>원격지 파일 경로</desc>
</singleitem>
<singleitem name="remoteFileName" type="ub pascal string">
	<desc>원격지 파일 이름</desc>
</singleitem>
<singleitem name="remoteFileSize" type="long">
	<desc>원격지 파일 크기, 이어받기시 필요한 정보</desc>
</singleitem>
<singleitem name="fileBlockSize" type="integer">
	<desc>전송할 파일 조각 크기</desc>
</singleitem>
</sinnori_message>
