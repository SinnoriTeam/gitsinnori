<?xml version="1.0" encoding="UTF-8"?>
<!--
	item type : (unsigned) byte, (unsigned) short, (unsigned) integer, long,
					fixed length string, 
					ub pascal string, us pascal string, si pascal string, 
					fixed length byte[], variable length byte[] 
	array counter type : reference 변수참조, direct 직접입력
	direction : FROM_NONE_TO_NONE, FROM_SERVER_TO_CLINET, FROM_CLIENT_TO_SERVER, FROM_ALL_TO_ALL
	(1) FROM_NONE_TO_NONE : 메시지는 서버에서 클라이언트로 혹은 클라이언트에서 서버로 양쪽 모두에서 전송되지 않는다.
	(2) FROM_SERVER_TO_CLINET : 메시지는 서버에서 클라이언트로만 전송된다.
	(3) FROM_CLIENT_TO_SERVER : 메시지는 클라이언트에서 서버로만 전송된다.
	(4) FROM_ALL_TO_ALL : 메시지는 서버에서 클라이언트로도 혹은 클라이언트에서 서버로 양쪽 모두에서 전송된다.
-->
<sinnori_message>
<messageID>FileListRes</messageID>
<direction>FROM_SERVER_TO_CLINET</direction>
<desc>서버 파일 목록 응답</desc>
<singleitem name="requestPathName" type="si pascal string">
	<desc>파일 목록을 가져올 서버 디렉토리명</desc>
</singleitem>
<singleitem name="pathSeperator" type="ub pascal string">
	<desc>파일시스템 고유 경로 구별 문자</desc>
</singleitem>
<singleitem name="isSuccess" type="ub pascal string">
	<desc>성공여부, Y:성공, N:실패</desc>
</singleitem>
<singleitem name="resultMessage" type="si pascal string">
	<desc>실패시 실패 사유, 성공시 축하 메시지</desc>
</singleitem>
<singleitem name="cntOfDriver" type="integer" />
<array name="driver" cnttype="reference" cntvalue="cntOfDriver">
	<singleitem name="driverName" type="ub pascal string">
		<desc>드라이브명, Microsoft OS 인 경우만 유효하다.</desc>
	</singleitem>
</array>
<singleitem name="cntOfChildFile" type="integer" />
<array name="childFile" cnttype="reference" cntvalue="cntOfChildFile">
	<singleitem name="fileName" type="si pascal string" />
	<singleitem name="fileSize" type="long" />
	<singleitem name="fileType" type="byte">
		<desc>파일 종류, 1:디렉토리, 0:파일</desc>
	</singleitem>
</array>
</sinnori_message>
