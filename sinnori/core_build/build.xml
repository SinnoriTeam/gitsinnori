<?xml version="1.0" encoding="ISO-8859-1" ?>
<project name="sinnori_core" default="compile.server.appinf" basedir=".">
	<description>Sinnori Core Library</description>
	<!-- set global properties for this build -->
	<property name="dir.src" location="src/main/java" />
	<property name="dir.build" location="build" />
	<property name="dir.dist" location="dist" />
	<property name="dir.lib" location="lib" />
	<property name="dir.APP-INF" location="APP-INF" />
	<property name="java.complile.option.debug" value="on" />
	
	<target name="clean.core">
		<!-- Delete the ${dir.build} and ${dir.dist} directory trees -->
		<delete dir="${dir.build}" />
		<delete dir="${dir.dist}" />
	</target>


	<target name="init.core">
		<!-- Create the time stamp -->
		<tstamp />
		<mkdir dir="${dir.lib}/in" />
		<mkdir dir="${dir.lib}/ex" />		
		<echo message="java.complile.option.debug=${java.complile.option.debug}" />
	</target>

	

	<target name="compile.common" depends="init.core">	  
		<mkdir dir="${dir.build}/common_lib" />
		
		<javac debug="${java.complile.option.debug}" debuglevel="lines,vars,source" encoding="UTF-8" includeantruntime="false" srcdir="${dir.src}" destdir="${dir.build}/common_lib">
			<include name="kr/pe/sinnori/common/**" />
      <include name="kr/pe/sinnori/impl/message/SelfExn/**" />
     
			<classpath>
				<fileset dir="${dir.lib}/in">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${dir.lib}/ex">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="make.common" depends="compile.common">
	  <mkdir dir="${dir.dist}" />
	  
		<jar jarfile="${dir.dist}/sinnori-common.jar" basedir="${dir.build}/common_lib">
			<restrict>
				<name name="**/*.class" />
				<archives>
					<zips>
						<fileset dir="${dir.lib}/in" includes="**/*.jar" />
					</zips>
				</archives>
			</restrict>
		</jar>
	</target>

	<target name="compile.server.nodepend">
		<echo message="this task depends on make.common task" />
		
		<mkdir dir="${dir.build}/server_lib" />
		<javac debug="${java.complile.option.debug}" debuglevel="lines,vars,source" encoding="UTF-8" includeantruntime="false" srcdir="${dir.src}" destdir="${dir.build}/server_lib">
			<include name="kr/pe/sinnori/server/**" />
			<classpath>
				<fileset file="${dir.dist}/sinnori-common.jar" />
				<fileset dir="${dir.lib}/ex">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>
	
	
	<target name="compile.client.nodepend">
		<echo message="this task depends on make.common task" />
		<echo message="echo dir.lib =[${dir.lib}/ex]" />	
		
		<mkdir dir="${dir.build}/client_lib" />
		<javac debug="${java.complile.option.debug}" debuglevel="lines,vars,source" encoding="UTF-8" includeantruntime="false" srcdir="${dir.src}" destdir="${dir.build}/client_lib">
			<include name="kr/pe/sinnori/client/**" />
			<classpath>
				<fileset file="${dir.dist}/sinnori-common.jar" />
				<fileset dir="${dir.lib}/ex">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="make.all" depends="make.common, compile.client.nodepend, compile.server.nodepend">
		<jar jarfile="${dir.dist}/sinnori-core.jar">
			<fileset dir="${dir.build}/common_lib" />
			<fileset dir="${dir.build}/server_lib" />
			<fileset dir="${dir.build}/client_lib" />
			
			<restrict>
				<name name="**/*.class" />
				<archives>
					<zips>
						<fileset dir="lib/in" includes="**/*.jar" />
					</zips>
				</archives>
			</restrict>
		</jar>
		
		<jar jarfile="${dir.dist}/sinnori-client.jar">
			<fileset dir="${dir.build}/common_lib" />
			<fileset dir="${dir.build}/client_lib" />
			
			<restrict>
				<name name="**/*.class" />
				<archives>
					<zips>
						<fileset dir="lib/in" includes="**/*.jar" />
					</zips>
				</archives>
			</restrict>
		</jar>
		
		<jar jarfile="${dir.dist}/sinnori-server.jar">
			<fileset dir="${dir.build}/common_lib" />
			<fileset dir="${dir.build}/server_lib" />
			<restrict>
				<name name="**/*.class" />
				<archives>
					<zips>
						<fileset dir="lib/in" includes="**/*.jar" />
					</zips>
				</archives>
			</restrict>
		</jar>
	</target>
	
	
	<target name="compile.server.appinf" depends="make.all">
	  <mkdir dir="${dir.build}/appinf" />
		<javac debug="${java.complile.option.debug}" debuglevel="lines,vars,source" encoding="UTF-8" includeantruntime="false" srcdir="${dir.APP-INF}/src" destdir="${dir.build}/appinf">
			<classpath>
				<fileset file="${dir.dist}/sinnori-server.jar" />
				<fileset dir="${dir.lib}/ex">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="${dir.APP-INF}/lib">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>
</project>
